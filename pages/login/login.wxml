<!--pages/login/login.wxml-->
<i-message id="message" />
<view class = "logo">
  {{logo}}
</view>
<view>
  <view class = "icons">
    <i-icon type="mine" size="30"/>
  </view>
  <input placeholder = "用户名或手机号或邮箱" bindblur = "inputUsername"/>
</view>
<view>
  <view class = "icons">
    <i-icon type="lock" size="30" />
  </view>
  <input value = "{{password}}" placeholder = "密码" bindblur = "inputPassword"/>
</view>
<view>
  <view class = "icons">
    <i-icon type="mail" size="30"/>
  </view>
  <input placeholder = "验证码" bindblur = "inputVerification"/>
</view>
<view
  class = "find"
  bindtap = 'findPassword'>
  找回密码</view>
<view class = "area">
<view style='height: 20px'>
<button 
  class = "handle"
  bindtap = 'login'
  >登陆</button>
</view>
</view>

